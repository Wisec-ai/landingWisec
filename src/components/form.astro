      id="mc-embedded-subscribe-form"
      name="mc-embedded-subscribe-form"
      class="validate"
      target="_blank"
      :class="intersect ? 'animate-shake animate-delay-[5000ms] animate-ease-out':'opacity-0'">
      <div id="mc_embed_signup_scroll">
        <div
          class="relative flex items-center rounded-2xl border border-black/20 bg-white p-1 px-2 focus-within:ring-2 focus-within:ring-primary dark:border-white/10 dark:bg-dark dark:text-white md:px-2 lg:pr-3 mb-3">
