          <form action="" class="mt-12" :class="intersect ? 'animate-shake animate-delay-[5000ms] animate-ease-out':'opacity-0'">
            <div
              class="relative flex items-center rounded-full border border-primary/20 bg-white p-1 px-2 shadow-md focus-within:ring-2 focus-within:ring-primary dark:border-white/10 dark:bg-dark dark:text-white md:p-2 lg:pr-3">
              <div class="py-3 pl-4 lg:pl-5">
