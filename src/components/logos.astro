    x-data="{intersect:false}"
    x-intersect:enter="intersect=true"
    x-intersect:leave="intersect=false">
    <h2 class="text-center text-lg text-white">Respaldados por</h2>
    <div
      class="flex flex-col lg:flex-row justify-between gap-10 lg:gap-6 invert brightness-0 my-10 md:my-16 lg:gap-12 items-center"
      :class="intersect ? 'animate-fade-up animate-duration-[1000ms] grayscale animate-ease-out':'opacity-0'">
      <Picture
        src={startup}
        alt="Logo de Start Up"
        widths={[200]}
        sizes="(max-width: 120px) 100vw, 150px"
        loading="eager"
        format="png"
      />
      <Picture
        src={scale}
        alt="Logo de Scale"
        widths={[200]}
        sizes="(max-width: 120px) 100vw, 150px"
        loading="eager"
        format="png"
      />
