---
import { Tick } from "@components/ui/icons";
import Link from "@components/ui/link.astro";
import Modal from "@components/modal.astro";

const { plan } = Astro.props;
---


  <div
    class="flex relative flex-col w-full order-first lg:order-none border-2 border-[#D8DEE9] border-opacity-50 py-5 px-6 rounded-md">
    <div class="text-center">
      <h4 class="text-lg font-medium text-primary">{plan.name}</h4>
      <p class="mt-3 text-3xl font-bold text-primary md:text-3xl text-primary">
        {plan.price.monthly}
      </p>
      <p class="mt-3 text-2xl font-bold text-primary md:text-2xl text-primary">
        {plan.price.annual}
      </p>
      <!-- {
        plan.price.original && (
          <p class="mt-1 text-xl font-medium text-primary line-through md:text-2xl">
            {plan.price.original}
          </p>
        )
      } -->
    </div><ul class="grid mt-8 text-left gap-y-4 pb-20">
      {
        plan.features.map((item) => (
          <li class="flex items-start gap-3 text-gray-800">
            <Tick class="w-6 h-6"/>
            <span>{item}</span>
          </li>
        ))
      }
    </ul><div class=" mt-8 absolute bottom-10 w-full text-center left-0">
      <!-- <Link
        href={plan.button.link || "#"}
        block
        style={plan.popular ? "primary" : "outline"}>
        {plan.button.text || "Get Started"}
      </Link> -->
      <Modal
        id={plan.id}
        className="rounded w-full text-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200 px-5 py-2.5 bg-white border-2 border-indigo-950 hover:bg-gray-100 text-primary"
        open={plan.button.text || "Abrir modal"}
        price={plan.price && typeof plan.price === "object"
          ? plan.price.monthly
          : plan.price}
        style={plan.popular ? "primary" : "outline"}
      />
    </div>
  </div>

