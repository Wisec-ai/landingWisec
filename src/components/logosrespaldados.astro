---
// @ts-ignore
import { Icon } from "astro-icon";
import { Picture } from "@astrojs/image/components";
import scale from "assets/respaldos/respaldoScale.png";
import mezcladora from "assets/respaldos/respaldoMezcladora.svg";
import startup from "assets/respaldos/respaldoStartup.png";
import apec from "assets/respaldos/partnerApec.png";
import cloud from "assets/respaldos/partnerCloudforStartups.webp";
import microsoft from "assets/respaldos/partnerMicrosoft.png";
import innovate from "assets/respaldos/partnerProInnovate.png";
import utec from "assets/respaldos/partnerUTEC.png";



---

<div class="lg:mx-auto py-16">
  <div
    class="max-w-5xl mx-auto"
    x-data="{intersect:false}"
    x-intersect:enter="intersect=true"
    x-intersect:leave="intersect=false">
    <h2 class="text-center text-3xl font-bold mb-10 tracking-tight text-white">Nuestros Partners</h2>
    <div
      class="flex flex-col lg:flex-row justify-between gap-10 lg:gap-6 invert brightness-0 lg:gap-12 items-center"
      :class="intersect ? 'animate-fade-up animate-duration-[1000ms] grayscale animate-ease-out':'opacity-0'">
      
      <Picture
        src={startup}
        alt="Logo de Start Up"
        widths={[200]}
        sizes="(max-width: 120px) 100vw, 150px"
        loading="eager"
        format="png"
      />
      <Picture
        src={scale}
        alt="Logo de Scale"
        widths={[200]}
        sizes="(max-width: 120px) 100vw, 150px"
        loading="eager"
        format="png"
      />
      <Picture
        src={mezcladora}
        alt="Logo de Mezcladora"
        widths={[200]}
        sizes="(max-width: 120px) 150px, 150px"
        loading="eager"
        format="svg"
      />
      <!-- <Picture
        src={habitat2}
        alt="Logo de Habitat"
        widths={[200]}
        sizes="(max-width: 120px) 100vw, 150px"
        loading="eager"
        format="png"
      /> -->
      <Picture
        src={apec}
        alt="Logo de APEC"
        widths={[200]}
        sizes="(max-width: 80px) 100vw, 100px"
        loading="eager"
        format="png"
      />
    </div>
    <div
      class="flex flex-col lg:flex-row justify-between gap-10 lg:gap-6 invert brightness-0 lg:gap-12 items-center"
      :class="intersect ? 'animate-fade-up animate-duration-[1000ms] grayscale animate-ease-out':'opacity-0'">
      <Picture
        src={cloud}
        alt="Logo de Cloud"
        widths={[200]}
        sizes="(max-width: 120px) 100vw, 150px"
        loading="eager"
        format="webp"
      />
      <Picture
        src={microsoft}
        alt="Logo de Microsoft"
        widths={[200]}
        sizes="(max-width: 120px) 100vw, 150px"
        loading="eager"
        format="png"
      />
      <Picture
        src={innovate}
        alt="Logo de Innovate"
        widths={[200]}
        sizes="(max-width: 120px) 100vw, 150px"
        loading="eager"
        format="png"
      />
      <Picture
        src={utec}
        alt="Logo de UTEC"
        widths={[200]}
        sizes="(max-width: 120px) 100vw, 150px"
        loading="eager"
        format="webp"
      />
    </div>
  </div>
</div>
