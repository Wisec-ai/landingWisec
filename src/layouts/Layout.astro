    </script>
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }

      .btn-constructor.item-active {
        background-color: #ffd700;
        color: black;
      }

      .btn-proveedor.item-active {
        background-color: #3dcab1;
        color: #071c42;
      }
    </style>
  </body>
</html>
